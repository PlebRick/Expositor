{
  "name": "expository-static",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build:css": "postcss src/styles/tailwind.css -o src/style.css",
    "watch:css": "postcss src/styles/tailwind.css -o src/style.css --watch",
    "serve": "serve src",
    "dev": "npm-run-all --parallel watch:css serve sync:watch",
    "sync:annotations": "node scripts/syncAnnotations.js",
    "sync:watch": "chokidar \"manualAnnotations.json\" -c \"npm run sync:annotations\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "postcss-cli": "^9.1.0",
    "serve": "^14.2.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.5.0",
    "vite": "^5.0.0",
    "vitest": "^1.5.1"
  }
}
