{
  "name": "expository-static",
  "version": "1.1.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel watch:css vite:dev",
    "vite:dev": "vite",
    "build": "vite build",
    "postbuild": "node scripts/generate-sw.mjs",
    "preview": "vite preview",
    "build:css": "postcss src/styles/tailwind.css -o src/style.css",
    "watch:css": "postcss src/styles/tailwind.css -o src/style.css --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "migrate:json-md": "ts-node scripts/json-to-md.ts"
  },
  "dependencies": {
    "fflate": "^0.8.1",
    "gray-matter": "^4.0.3",
    "idb": "^8.0.0",
    "markdown-it": "^14.0.0",
    "workbox-window": "^7.0.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/ui": "^1.5.1",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "postcss-cli": "^9.1.0",
    "serve": "^14.2.0",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.0",
    "vite": "^5.0.7",
    "vitest": "^1.5.1",
    "workbox-build": "^7.0.0"
  }
}
